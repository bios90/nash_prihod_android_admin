<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.dimfcompany.nashprihodadmin.logic.utils.builders.BuilderBg" />

        <import type="com.dimfcompany.nashprihodadmin.R" />
    </data>

    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_date"
                style="@style/TvBold.M"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="7 марта 2021 Вс"
                android:textAlignment="center"
                android:textColor="@color/blue_dark"
                tools:ignore="TextFields" />

            <TextView
                android:id="@+id/tv_date_title"
                style="@style/TvBold.L"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Неделя мясопустная. О страшном суде."
                android:textAlignment="center"
                tools:ignore="TextFields" />

            <include
                android:id="@+id/item_service_time1"
                layout="@layout/item_service_time" />

            <include
                android:id="@+id/item_service_time2"
                layout="@layout/item_service_time" />

            <include
                android:id="@+id/item_service_time3"
                layout="@layout/item_service_time" />

            <include
                android:id="@+id/item_service_time4"
                layout="@layout/item_service_time" />

            <include
                android:id="@+id/item_service_time5"
                layout="@layout/item_service_time" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>
</layout>