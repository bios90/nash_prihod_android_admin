<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.dimfcompany.nashprihodadmin.logic.utils.builders.BuilderBg" />

        <import type="com.dimfcompany.nashprihodadmin.R" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@{BuilderBg.getSimpleDrawable(4f, BuilderBg.gc(R.color.white))}"
        android:elevation="12dp"
        android:orientation="horizontal"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:padding="8dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_service_time"
            style="@style/TvReg.S"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9:00"
            android:textAlignment="viewStart"
            android:textColor="@color/blue_dark" />

        <TextView
            android:id="@+id/tv_service_title"
            style="@style/TvReg.S"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="start"
            android:text="Часы. Исповедь" />
        
    </LinearLayout>
    
</layout>