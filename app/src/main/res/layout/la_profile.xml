<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.dimfcompany.nashprihodadmin.logic.utils.builders.BuilderBg" />

        <import type="com.dimfcompany.nashprihodadmin.R" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <include
            android:id="@+id/profile_avatar"
            layout="@layout/cv_circle_image"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_above="@id/lal_for_tp"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/lal_for_tp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pr_name"
                style="@style/TvReg.Xxl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:text="@string/user_name"
                android:textColor="@color/blue_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/birthday"
                    android:textColor="@color/gray5"
                    android:textAlignment="viewEnd" />

                <TextView
                    style="@style/TvFawLight.L"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/faw_birthday"
                    android:textAlignment="center"
                    android:textColor="@color/blue_dark" />

                <TextView
                    android:id="@+id/pr_birthday_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/birthday_value"
                    android:textColor="@color/gray5"
                    android:textAlignment="viewStart" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/nameday"
                    android:textColor="@color/gray5"
                    android:textAlignment="viewEnd" />

                <TextView
                    style="@style/TvFawLight.L"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/faw_nameday"
                    android:textAlignment="center"
                    android:textColor="@color/blue_dark" />

                <TextView
                    android:id="@+id/pr_nameday_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/nameday_date"
                    android:textColor="@color/gray5"
                    android:textAlignment="viewStart" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/email"
                    android:textColor="@color/gray5"
                    android:textAlignment="viewEnd" />

                <TextView
                    style="@style/TvFawLight.L"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/faw_email"
                    android:textAlignment="center"
                    android:textColor="@color/blue_dark" />

                <TextView
                    android:id="@+id/pr_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/email_value"
                    android:textColor="@color/gray5"
                    android:textAlignment="viewStart" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/phone"
                    android:textColor="@color/gray5"
                    android:textAlignment="viewEnd" />

                <TextView
                    style="@style/TvFawLight.L"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/faw_phone"
                    android:textAlignment="center"
                    android:textColor="@color/blue_dark" />

                <TextView
                    android:id="@+id/pr_phone_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/phone_number"
                    android:textColor="@color/gray5"
                    android:textAlignment="viewStart" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/pr_about_me"
                    style="@style/TVStroke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/about_me"
                    android:textColor="@color/gray7" />
            </ScrollView>

            <TextView
                android:id="@+id/pr_btn_edit"
                style="@style/BlueButton"
                android:gravity="center"
                android:layout_marginTop="18dp"
                android:text="@string/edit" />

            <TextView
                android:id="@+id/pr_btn_exit"
                style="@style/BSButton"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:text="@string/exit" />

        </LinearLayout>


    </RelativeLayout>

</layout>